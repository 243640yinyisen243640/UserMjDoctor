<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/to_do_top" />

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_black_16_f_w"
                android:text="这是标题 这是标题" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_2"
                android:text="这是时间 这是时间" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="这是内容 这是内容这是内容 这是内容这是内容 这是内容这是内容 这是内容" />

        </LinearLayout>

        <com.wei.android.lib.colorview.view.ColorTextView
            android:id="@+id/tv_red_point"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:backgroundColorNormal="@color/main_red"
            app:cornerRadiusNormal="@dimen/dp_10" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10" />

</LinearLayout>