<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_patient_info_bottom_top">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="54dp"
                android:orientation="vertical">
                <!--上-->
                <LinearLayout
                    android:id="@+id/ll_top"
                    style="@style/hh_fi_wr"
                    android:layout_height="46dp"
                    android:orientation="vertical">

                    <View
                        style="@style/line"
                        android:background="#fff2f1f1" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_top"
                            style="@style/text_gray_14_f_w"
                            android:layout_marginLeft="56dp"
                            android:layout_weight="0.8"
                            android:text="血糖分析报告"
                            android:textSize="@dimen/size_17" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                </LinearLayout>


                <!--中-->
                <LinearLayout
                    android:id="@+id/ll_center"
                    style="@style/hh_fi_wr"
                    android:layout_height="46dp"
                    android:orientation="vertical">

                    <View
                        style="@style/line"
                        android:background="#fff2f1f1" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_center"
                            style="@style/text_gray_14_f_w"
                            android:layout_marginLeft="56dp"
                            android:layout_weight="0.8"
                            android:text="血糖分析报告"
                            android:textSize="@dimen/size_17" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                </LinearLayout>


                <!--下-->
                <LinearLayout
                    android:id="@+id/ll_bottom"
                    style="@style/hh_fi_wr"
                    android:layout_height="46dp"
                    android:orientation="vertical">

                    <View
                        style="@style/line"
                        android:background="#fff2f1f1" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_bottom"
                            style="@style/text_gray_14_f_w"
                            android:layout_marginLeft="56dp"
                            android:layout_weight="0.8"
                            android:text="肝病随访"
                            android:textSize="@dimen/size_17" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                </LinearLayout>


                <!--下下-->
                <LinearLayout
                    android:id="@+id/ll_bottom_bottom"
                    style="@style/hh_fi_wr"
                    android:layout_height="46dp"
                    android:orientation="vertical">

                    <View
                        style="@style/line"
                        android:background="#fff2f1f1" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_bottom_bottom"
                            style="@style/text_gray_14_f_w"
                            android:layout_marginLeft="56dp"
                            android:layout_weight="0.8"
                            android:text="减重自我管理处方"
                            android:textSize="@dimen/size_17" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_18"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <!--竖直线-->
            <LinearLayout
                style="@style/hh_fi_wr"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <!--竖直线 左边-->

                <View
                    android:id="@+id/line_vertical_left"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="0dp"
                    android:layout_marginRight="3dp"
                    android:background="#fff5ecef" />

                <!--竖直线 右边-->
                <View
                    android:id="@+id/line_vertical_right"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="0dp"
                    android:background="#fff5ecef" />

            </LinearLayout>


        </FrameLayout>


        <!--指示条-->
        <LinearLayout
            android:id="@+id/ll_label"
            style="@style/hh_wr_wr"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/patient_info_label_one"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/patient_info_label_one_left" />

            <TextView
                android:id="@+id/tv_label"
                style="@style/text_white_14_w_w"
                android:paddingLeft="@dimen/dp_5"
                android:text="智能分析报告"
                android:textSize="@dimen/size_17" />


        </LinearLayout>

    </FrameLayout>


</LinearLayout>