<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/shape_patient_info_bottom_top">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="54dp"
                android:orientation="vertical">

                <View
                    style="@style/line"
                    android:background="#fff2f1f1"></View>

                <LinearLayout
                    android:id="@+id/ll_tcm"
                    style="@style/hh_fi_wr"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center">

                    <TextView
                        style="@style/text_gray_14_f_w"
                        android:layout_marginLeft="56dp"
                        android:layout_weight="0.8"
                        android:text="中医体质辨识"
                        android:textSize="@dimen/size_17" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_18"
                        android:scaleType="centerCrop"
                        android:src="@drawable/right_arrow" />

                </LinearLayout>

                <View
                    style="@style/line"
                    android:background="#fff2f1f1"></View>


            </LinearLayout>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">


                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="148dp"
                    android:background="#fff5ecef"></View>

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="148dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:background="#fff5ecef"></View>

            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/patient_info_label_four"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/patient_info_label_four_left" />

            <TextView
                style="@style/text_white_14_w_w"
                android:paddingLeft="@dimen/dp_5"
                android:text="中医体质辨识系统"
                android:textSize="@dimen/size_17" />


        </LinearLayout>

    </FrameLayout>


</LinearLayout>