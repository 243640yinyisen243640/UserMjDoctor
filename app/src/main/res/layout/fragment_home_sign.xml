<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        style="@style/line"
        android:layout_height="3dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_one"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_one"
            android:text="签约＋" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_two"
            android:text="我的二维码" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_three"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_three"
            android:text="快速签约" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_four"
            android:text="消息群发" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <LinearLayout
            android:id="@+id/ll_five"
            style="@style/hh_fi_wr"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_five"
                style="@style/family_doctor_main"
                android:drawableStart="@drawable/home_sign_five"
                android:text="待办事项" />

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_red_point"
                style="@style/text_white_12_w_w"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="12"
                android:visibility="gone"
                app:backgroundColorNormal="@color/main_red"
                app:cornerRadiusNormal="90dp" />
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_six"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_six"
            android:text="签约列表" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_seven"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_seven"
            android:text="患者统计" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_eight"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/home_sign_seven"
            android:text="签约协议"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>