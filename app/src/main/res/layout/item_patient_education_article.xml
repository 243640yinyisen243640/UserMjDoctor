<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">


    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="@dimen/dp_4">

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/patient_education_video" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_black_14_w_w"
                android:layout_gravity="center_vertical"
                android:text="重要通知,测试一下" />

            <TextView
                android:id="@+id/tv_sub_title"
                style="@style/text_gray_14_w_w"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="重要通知，3.16更新了某某某模块测试一下重要通知，测试一下重要通知，测试一......" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/apply_to_hospital_checked"
            android:visibility="visible" />


    </com.wei.android.lib.colorview.view.ColorLinearLayout>

</LinearLayout>
