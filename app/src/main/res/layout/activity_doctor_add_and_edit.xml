<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical">
        <!--医生名称-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="医生名称:" />


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_doctor_name"
                style="@style/et_base_style_no_bg"
                android:layout_weight="0.8"
                android:hint="请输入"
                android:padding="5dp"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>


            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_edit"
                android:visibility="gone" />
        </LinearLayout>

        <!--医生账号:-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="医生账号:" />


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_account_name"
                style="@style/et_base_style_no_bg"
                android:hint="请输入"
                android:padding="5dp"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>
        </LinearLayout>
        <!--输入密码:-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="输入密码:" />


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_pwd"
                style="@style/et_base_style_no_bg"
                android:hint="请输入"
                android:inputType="textPassword"
                android:padding="5dp"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>
        </LinearLayout>

        <!--确认密码:-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="确认密码:" />


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_pwd_repeat"
                style="@style/et_base_style_no_bg"
                android:hint="请输入"
                android:inputType="textPassword"
                android:padding="5dp"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>
        </LinearLayout>

        <!--医生照片-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="医生照片:" />


            <ImageView
                android:id="@+id/img_doctor_head"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_add" />
        </LinearLayout>

        <!--联系方式:-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">


            <TextView
                style="@style/text_black_14_w_w"
                android:layout_marginRight="9dp"
                android:text="联系方式:" />


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_connect_way"
                style="@style/et_base_style_no_bg"
                android:hint="请输入"
                android:padding="5dp"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>
        </LinearLayout>
    </LinearLayout>


    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/bt_add"
        style="@style/text_white_16_f_w"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="确定"
        app:backgroundColorNormal="@color/main_red"
        app:cornerRadiusNormal="@dimen/dp_5">

    </com.wei.android.lib.colorview.view.ColorTextView>
</RelativeLayout>