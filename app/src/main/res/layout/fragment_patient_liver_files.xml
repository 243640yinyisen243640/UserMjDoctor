<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/hh_fi_fi"
    android:background="@color/background">

    <!--底层-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:background="@color/white"
        android:orientation="vertical">

        <!--背景-->
        <View
            style="@style/line"
            android:layout_height="100dp"
            android:background="@color/main_red" />

        <!--列表-->
        <ScrollView
            style="@style/scrollView"
            android:layout_marginTop="@dimen/dp_40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<item>基本信息</item>-->
                <LinearLayout
                    android:id="@+id/ll_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12">

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center"
                            android:background="@color/main_red" />

                        <TextView
                            style="@style/text_black_14_f_w"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingLeft="@dimen/dp_10"
                            android:text="基本信息" />

                        <ImageView
                            android:id="@+id/img_base_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>

                    <View style="@style/line" />


                </LinearLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/el_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="600"
                    app:el_expanded="false"
                    app:el_parallax="0.5">

                    <com.lyd.baselib.widget.view.MyListView
                        android:id="@+id/lv_base_info"
                        style="@style/listView">

                    </com.lyd.baselib.widget.view.MyListView>


                </net.cachapa.expandablelayout.ExpandableLayout>
                <!--<item>体格检查</item>-->

                <LinearLayout
                    android:id="@+id/ll_body_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12">

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center"
                            android:background="@color/main_red" />

                        <TextView
                            style="@style/text_black_14_f_w"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:paddingLeft="@dimen/dp_10"
                            android:text="体格检查" />

                        <ImageView
                            android:id="@+id/img_body_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:scaleType="centerCrop"
                            android:src="@drawable/right_arrow" />

                    </LinearLayout>

                    <View style="@style/line" />


                </LinearLayout>


                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/el_body_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="600"
                    app:el_expanded="false"
                    app:el_parallax="0.5">

                    <com.lyd.baselib.widget.view.MyListView
                        android:id="@+id/lv_body_check"
                        style="@style/listView">

                    </com.lyd.baselib.widget.view.MyListView>


                </net.cachapa.expandablelayout.ExpandableLayout>

                <!--<item>实验室检查</item>-->
                <LinearLayout
                    android:id="@+id/ll_lab_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12">

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center"
                            android:background="@color/main_red" />

                        <TextView
                            style="@style/text_black_14_f_w"
                            android:layout_gravity="center"
