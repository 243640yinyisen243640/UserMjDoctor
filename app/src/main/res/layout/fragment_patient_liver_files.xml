                    </com.lyd.baselib.widget.view.MyListView>


                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <!--基本信息 上层-->
    <include layout="@layout/include_patient_info_head_basic_info">

    </include>

</FrameLayout>

