<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <com.wei.android.lib.colorview.view.ColorFrameLayout
        android:layout_width="254dp"
        android:layout_height="96dp"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="@dimen/dp_5">

        <ImageView
            android:id="@+id/img_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_sign_select_type_cancel" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/ll_left"
                style="@style/hh_fi_fi"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_sign_quick_scan" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="扫描患者二维码" />
            </LinearLayout>


            <View
                style="@style/line"
                android:layout_width="1dp"
                android:layout_height="180dp" />

            <LinearLayout
                android:id="@+id/ll_right"
                style="@style/hh_fi_fi"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_sign_quick_photo" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="身份证识别,快速上传" />
            </LinearLayout>

        </LinearLayout>


    </com.wei.android.lib.colorview.view.ColorFrameLayout>


</LinearLayout>