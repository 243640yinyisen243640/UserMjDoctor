<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_to_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:scaleType="centerCrop"
                android:src="@drawable/to_do_top" />

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_red_point"
                style="@style/text_white_12_w_w"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="-24dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/img_to_do"
                android:gravity="center"
                android:text="99"
                android:textSize="10sp"
                app:backgroundColorNormal="@color/main_red"
                app:cornerRadiusNormal="180dp" />
        </RelativeLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="-4dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">


            <TextView
                android:id="@+id/tv_title"
                style="@style/text_black_16_f_w"
                android:text="智慧助手" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_6"
                android:text="最新系统通知消息内容" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10"></View>


</LinearLayout>