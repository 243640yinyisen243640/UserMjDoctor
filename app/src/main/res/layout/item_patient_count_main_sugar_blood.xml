<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_head"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/patient_count_main_default_head" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="0.8"
                    android:text="姓名" />


                <TextView
                    android:id="@+id/tv_time"
                    style="@style/text_gray_14_w_w"
                    android:text="10-28 10:44 午餐后" />


            </LinearLayout>


            <RelativeLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_value"
                        style="@style/text_black_14_w_w"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="12.0"
                        android:textColor="@color/main_red" />

                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmol/L" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_tel"
                    style="@style/text_gray_14_w_w"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/patient_count_main_phone_call"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="15965364536" />


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <View
        style="@style/line"
        android:layout_marginLeft="55dp" />


</LinearLayout>