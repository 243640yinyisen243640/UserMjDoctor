<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/patient_add_today_left_pic"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="true" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="0.8"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_black_14_w_w"
                    android:text="张三三"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/patient_add_today_sex_male" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/text_gray_12_w_w"
                    android:text="24岁" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_tel"
                style="@style/text_gray_14_w_w"
                android:layout_marginTop="@dimen/dp_6"
                android:text="15756862356"
                android:textSize="13sp" />


        </LinearLayout>

        <!--高血压 糖尿病-->
        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_gxy"
                style="@style/text_gray_12_w_w"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="高血压"
                android:textColor="@color/patient_add_today_gray"
                app:backgroundColorNormal="@color/white"
                app:borderColorNormal="@color/patient_add_today_gray"
                app:borderWidthNormal="@dimen/dp_1"
                app:cornerRadiusNormal="180dp">


            </com.wei.android.lib.colorview.view.ColorTextView>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_tnb"
                style="@style/text_gray_12_w_w"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="糖尿病"
                android:textColor="@color/patient_add_today_blue"
                app:backgroundColorNormal="@color/white"
                app:borderColorNormal="@color/patient_add_today_blue"
                app:borderWidthNormal="@dimen/dp_1"
                app:cornerRadiusNormal="180dp">


            </com.wei.android.lib.colorview.view.ColorTextView>


        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10" />


</LinearLayout>