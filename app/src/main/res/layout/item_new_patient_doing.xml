<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:padding="@dimen/dp_15">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_head"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_patient_head_img"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="true" />

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout style="@style/hh_fi_wr">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="0.8"
                    android:text="这是名字" />


                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_yes"
                    style="@style/text_black_14_w_w"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="同意"
                    app:backgroundColorNormal="@color/new_patient_yes"
                    app:cornerRadiusNormal="90dp" />

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_no"
                    style="@style/text_black_14_w_w"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="拒绝"
                    app:backgroundColorNormal="@color/new_patient_no"
                    app:cornerRadiusNormal="90dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                style="@style/text_gray_14_f_w"
                android:text="张三 已经申请您为他的专属医生" />


        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10" />
</LinearLayout>