<?xml version="1.0" encoding="utf-8"?>
<ScrollView style="@style/scrollView">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/hh_fi_fi"
        android:background="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/hh_fi_wr"
            android:layout_height="200dp"
            android:background="@color/colorPrimaryDark">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">


                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/img_head"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doctor_list_head_img"
                    app:qmui_border_width="0dp"
                    app:qmui_is_circle="true" />

                <LinearLayout
                    style="@style/hh_fi_wr"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical">


                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_username"
                            style="@style/text_white_16_w_w"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="用户名" />

                        <TextView
                            android:id="@+id/tv_sign_status"
                            style="@style/text_white_12_w_w"
                            android:background="@drawable/user_sign_bg_shape"
                            android:drawableLeft="@drawable/user_sign"
                            android:drawablePadding="@dimen/dp_5"
                            android:paddingLeft="6dp"
                            android:paddingTop="3dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="3dp"
                            android:text="@string/user_sign_status" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_tel"
                        style="@style/text_white_14_w_w"
                        android:layout_marginTop="@dimen/dp_2"
                        android:text="13213071373" />

                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:layout_marginRight="5dp"
                android:padding="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/setting" />

        </RelativeLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/hh_fi_wr"
                android:padding="@dimen/dp_12">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="医院" />

                <TextView
                    android:id="@+id/tv_hospital"
                    style="@style/text_black_12_w_w"
                    android:layout_alignParentRight="true"
                    android:text="糖医生团队" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />


            <RelativeLayout
                style="@style/hh_fi_wr"
                android:padding="@dimen/dp_12">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="科室" />

                <TextView
                    android:id="@+id/tv_section_office"
                    style="@style/text_black_12_w_w"
                    android:layout_alignParentRight="true"
                    android:text="医学部" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />


            <RelativeLayout
                style="@style/hh_fi_wr"
                android:padding="@dimen/dp_12">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="职称" />

                <TextView
                    android:id="@+id/tv_professional_title"
                    style="@style/text_black_12_w_w"
                    android:layout_alignParentRight="true"
                    android:text="主治医生" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />


            <RelativeLayout
                android:id="@+id/rl_personal_excel"
                style="@style/hh_fi_wr"
                android:padding="@dimen/dp_12">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="个人擅长" />

                <TextView
                    android:id="@+id/tv_personal_excel"
                    style="@style/text_black_12_w_w"
                    android:layout_alignParentRight="true"
                    android:text="个人擅长123456" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />

            <LinearLayout
                android:id="@+id/ll_personal_desc"
                style="@style/hh_fi_wr"
                android:orientation="vertical">


                <TextView
                    style="@style/text_black_14_f_w"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingBottom="6dp"
                    android:text="个人简介" />

                <TextView
                    android:id="@+id/tv_personal_desc"
                    style="@style/text_gray_12_f_w"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:text="这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介这是个人简介" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10" />


            <LinearLayout
                android:id="@+id/ll_qrcode"
                style="@style/hh_fi_wr"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_qrcode"
                    style="@style/hh_fi_wr"
                    android:padding="@dimen/dp_12">

                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="二维码名片" />

                    <ImageView
                        style="@style/hh_wr_wr"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/home_user_my_qrcode" />

                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
