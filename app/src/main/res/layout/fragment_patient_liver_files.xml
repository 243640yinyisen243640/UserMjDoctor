                    </LinearLayout>

                    <View style="@style/line" />


                </LinearLayout>


                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/el_medicine_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="600"
